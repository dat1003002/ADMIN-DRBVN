@model AspnetCoreMvcFull.ModelDTO.Product.MSDTO

@{
	ViewData["Title"] = "Thêm Mới Sản Phẩm";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card mb-4">
				<div class="card-header d-flex align-items-center justify-content-between">
					<h5 class="mb-0">Thêm Mới Sản Phẩm</h5>
				</div>
				<div class="card-body">
					<form asp-controller="Banbury" asp-action="Create" method="post" enctype="multipart/form-data">
						@Html.AntiForgeryToken()

						<div class="row mb-3">
							<label asp-for="Name" class="col-sm-4 col-form-label">Tên Sản Phẩm</label>
							<div class="col-sm-8">
								<input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>

						<div class="row mb-3">
							<label asp-for="CategoryId" class="col-sm-4 col-form-label">Danh Mục</label>
							<div class="col-sm-8">
								<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
								</select>
								<span asp-validation-for="CategoryId" class="text-danger"></span>
							</div>
						</div>

						<div class="row mb-3">
							<label class="col-sm-4 col-form-label">Upload nhiều ảnh sản phẩm</label>
							<div class="col-sm-8">
								<input type="file" name="ImageFiles" multiple class="form-control" accept="image/*" />
							</div>
						</div>

						<div class="row mb-3">
							<label class="col-sm-4 col-form-label">Upload file PDF (tùy chọn)</label>
							<div class="col-sm-8">
								<input type="file" name="PdfFile" class="form-control" accept=".pdf" />
							</div>
						</div>

						<div class="row justify-content-end">
							<div class="col-sm-8 offset-sm-4">
								<button type="submit" class="btn btn-primary me-2">Lưu</button>
								<a asp-controller="Banbury" asp-action="ListBanbury" class="btn btn-secondary">Hủy</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
