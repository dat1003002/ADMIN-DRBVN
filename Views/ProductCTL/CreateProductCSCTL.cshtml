@model AspnetCoreMvcFull.ModelDTO.Product.ProductCTLDTO

@{
	ViewData["Title"] = "Thêm Công Việc Lõi Thép";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card mb-4">
				<div class="card-header d-flex align-items-center justify-content-between">
					<h5 class="mb-0">Tạo Mới Tiêu Chuẩn Công Việc</h5>
				</div>
				<div class="card-body">
					<form asp-action="CreateProductCSCTL" method="post" enctype="multipart/form-data">
						@Html.AntiForgeryToken()
						<div class="row mb-3">
							<label class="col-sm-4 col-form-label" for="name">Tên Tiêu Chuẩn</label>
							<div class="col-sm-8">
								<input type="text" asp-for="name" class="form-control" placeholder="Tên Quy Cách" />
								<span asp-validation-for="name" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-3">
							<label class="col-sm-4 col-form-label" for="imageUpload">Ảnh Tiêu Chuẩn</label>
							<div class="col-sm-8">
								<input type="file" asp-for="imageFile" class="form-control" id="imageUpload" accept="image/*" />
								<span asp-validation-for="image" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-3">
							<label class="col-sm-4 col-form-label" for="category">Danh Mục</label>
							<div class="col-sm-8">
								<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
									<option value="">Chọn danh mục</option>
								</select>
								<span asp-validation-for="CategoryId" class="text-danger"></span>
							</div>
						</div>
						<div class="row justify-content-end">
							<div class="col-sm-12">
								<button type="submit" class="btn btn-primary">Lưu</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
