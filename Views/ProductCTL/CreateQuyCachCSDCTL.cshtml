@model AspnetCoreMvcFull.ModelDTO.Product.QuyCachCaoSuCTLDTO
@{
	ViewData["Title"] = "Thêm Quy Cách Cao Su Đùn";
}

<div class="row">
	<div class="col-xxl">
		<div class="card mb-6">
			<div class="card-header d минимally-flex align-items-center justify-content-between">
				<h5 class="mb-0">Tạo Mới Quy Cách Cao Su Đùn</h5>
			</div>
			<div class="card-body">
				@if (TempData["SuccessMessage"] != null)
				{
					<div class="alert alert-success" role="alert">
						@TempData["SuccessMessage"]
					</div>
				}
				@if (TempData["ErrorMessage"] != null)
				{
					<div class="alert alert-danger" role="alert">
						@TempData["ErrorMessage"]
					</div>
				}
				<form asp-action="CreateProduct" asp-controller="QuyCachCaoSuCTL" method="post">
					@Html.AntiForgeryToken()
					<div class="row">
						<!-- Cột bên trái -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="mahang">Mã Sản Phẩm</label>
								<div class="col-sm-8">
									<input type="number" class="form-control" asp-for="mahang" placeholder="Mã Sản Phẩm" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="name">Tên Sản Phẩm</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="name" placeholder="Tên Sản Phẩm" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaicaosu">Loại Cao Su</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaicaosu" placeholder="Loại Cao Su" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaicaosu1">Loại Cao Su 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaicaosu1" placeholder="Loại Cao Su 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaicaosu2">Loại Cao Su 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaicaosu2" placeholder="Loại Cao Su 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaikhuondun">Loại Khuôn Đùn</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaikhuondun" placeholder="Loại Khuôn Đùn" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaikhuondun1">Loại Khuôn Đùn 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaikhuondun1" placeholder="Loại Khuôn Đùn 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="loaikhuondun2">Loại Khuôn Đùn 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="loaikhuondun2" placeholder="Loại Khuôn Đùn 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tocdomotor">Tốc Độ Motor</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tocdomotor" placeholder="Tốc Độ Motor" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tocdomotor1">Tốc Độ Motor 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tocdomotor1" placeholder="Tốc Độ Motor 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tocdomotor2">Tốc Độ Motor 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tocdomotor2" placeholder="Tốc Độ Motor 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="chieudai">Chiều Dài</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="chieudai" placeholder="Chiều Dài" />
								</div>
							</div>
						</div>
						<!-- Cột bên phải -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="chieudai1">Chiều Dài 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="chieudai1" placeholder="Chiều Dài 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="chieudai2">Chiều Dài 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="chieudai2" placeholder="Chiều Dài 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="kho">Khổ</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="kho" placeholder="Khổ" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="kho1">Khổ 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="kho1" placeholder="Khổ 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="kho2">Khổ 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="kho2" placeholder="Khổ 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="doday">Độ Dày</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="doday" placeholder="Độ Dày" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="doday1">Độ Dày 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="doday1" placeholder="Độ Dày 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="doday2">Độ Dày 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="doday2" placeholder="Độ Dày 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="trongluong">Trọng Lượng</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="trongluong" placeholder="Trọng Lượng" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="trongluong1">Trọng Lượng 1</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="trongluong1" placeholder="Trọng Lượng 1" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="trongluong2">Trọng Lượng 2</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="trongluong2" placeholder="Trọng Lượng 2" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="CategoryId">Danh Mục</label>
								<div class="col-sm-8">
									<select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
										<option value="">Chọn danh mục</option>
									</select>
								</div>
							</div>
						</div>
					</div>
					<!-- Nút submit -->
					<div class="row justify-content-end">
						<div class="col-sm-12">
							<button type="submit" class="btn btn-primary">Lưu</button>
							<a href="@Url.Action("ListQuyCachCSDCTL")" class="btn btn-secondary">Hủy</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
