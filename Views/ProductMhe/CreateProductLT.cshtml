@model AspnetCoreMvcFull.Models.Product
@{
	ViewData["Title"] = "Thêm Công Việc Lõi Thép";
}

<div class="row">
	<div class="col-xxl">
		<div class="card mb-6">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Tạo Mới Công Việc Lõi Thép</h5>
			</div>
			<div class="card-body">
				<form asp-action="CreateProductLT" method="post">
					@Html.AntiForgeryToken()
					<div class="row">
						<!-- Cột bên trái -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-name">Mã Quy Cách</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="mahang" placeholder="Mã Quy Cách" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Tên Quy Cách</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="name" placeholder="Tên Quy Cách" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Loại Lõi Thép</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="quycachloithep" placeholder="Loại Lõi Thép" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Khuôn Lỗ Die</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="khuonlodie" placeholder="Khuôn Lỗ Die" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Khuôn Sợi Holder</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="khuonsoiholder" placeholder="Khuôn Sợi Holder" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Số Sợi (±0):</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="sosoi" placeholder="Số Sợi (±0):" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Pitch:</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="pitch" placeholder="Pitch:" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Tiêu Chuẩn</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tieuchuan" placeholder="Tiêu Chuẩn" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Thực Tế</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="thucte" placeholder="Thực Tế" />
								</div>
							</div>
						</div>

						<!-- Cột bên phải -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Độ dày(± 0.3mm):</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="doday" placeholder="Độ dày(± 0.3mm):" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-phone">Sợi 1 - 3</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="soi1" placeholder="Sợi 1 - 3" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Sợi 2 - 4</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="soi2" placeholder="Sợi 2 - 4" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Số Dây Cắt Được:</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="sodaycatduoc" placeholder="Số Dây Cắt Được:" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Chiều Dài Lớn</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="chieudaicatlon" placeholder="Chiều Dài Trước Khi Cắt Lớn" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Chiều Dài Nhỏ</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="chieudaicatnho" placeholder="Chiều Dài Trước Khi Cắt Nhỏ" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Tốc độ máy đùn(±50):</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tocdomaydun" placeholder="Tốc độ máy đùn(±50):" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="basic-default-company">Tốc độ Kéo(±50):</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" asp-for="tocdokeo" placeholder="Tốc độ Kéo(±50):" />
								</div>
							</div>
							<!-- Dropdown cho danh mục -->
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="category">Danh Mục</label>
								<div class="col-sm-8">
									<select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
										<option value="">Chọn danh mục</option>
									</select>
								</div>
							</div>
						</div>
					</div>

					<!-- Nút submit -->
					<div class="row justify-content-end">
						<div class="col-sm-12">
							<button type="submit" value="Create" class="btn btn-primary">Lưu</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
