@model AspnetCoreMvcFull.Models.Product
@{
	ViewData["Title"] = "Chỉnh sửa lõi thép";
}

<div class="row">
	<div class="col-xxl">
		<div class="card mb-6">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Chỉnh Công Việc Lõi Thép</h5>
			</div>
			<div class="card-body">
				<form asp-action="EditProductLT" method="post">
					@Html.AntiForgeryToken()

					<input type="hidden" asp-for="ProductId" />

					<div class="row">
						<!-- Cột bên trái -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="mahang">Mã Quy Cách</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="mahang" asp-for="mahang" placeholder="Mã Quy Cách" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="name">Tên Quy Cách</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="name" asp-for="name" placeholder="Tên Quy Cách" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="quycachloithep">Loại Lõi Thép</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="quycachloithep" asp-for="quycachloithep" placeholder="Loại Lõi Thép" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="khuonlodie">Khuôn Lỗ Die</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="khuonlodie" asp-for="khuonlodie" placeholder="Khuôn Lỗ Die" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="khuonsoiholder">Khuôn Sợi Holder</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="khuonsoiholder" asp-for="khuonsoiholder" placeholder="Khuôn Sợi Holder" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="sosoi">Số Sợi (±0)</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="sosoi" asp-for="sosoi" placeholder="Số Sợi (±0)" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="pitch">Pitch</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="pitch" asp-for="pitch" placeholder="Pitch" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tieuchuan">Tiêu Chuẩn</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="tieuchuan" asp-for="tieuchuan" placeholder="Tiêu Chuẩn" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="thucte">Thực Tế</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="thucte" asp-for="thucte" placeholder="Thực Tế" />
								</div>
							</div>
						</div>

						<!-- Cột bên phải -->
						<div class="col-md-6">
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="doday">Độ dày (± 0.3mm)</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="doday" asp-for="doday" placeholder="Độ dày (± 0.3mm)" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="soi1">Sợi 1 - 3</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="soi1" asp-for="soi1" placeholder="Sợi 1 - 3" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="soi2">Sợi 2 - 4</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="soi2" asp-for="soi2" placeholder="Sợi 2 - 4" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="sodaycatduoc">Số Dây Cắt Được</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="sodaycatduoc" asp-for="sodaycatduoc" placeholder="Số Dây Cắt Được" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="chieudaicatlon">Chiều Dài Lớn</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="chieudaicatlon" asp-for="chieudaicatlon" placeholder="Chiều Dài Trước Khi Cắt Lớn" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="chieudaicatnho">Chiều Dài Nhỏ</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="chieudaicatnho" asp-for="chieudaicatnho" placeholder="Chiều Dài Trước Khi Cắt Nhỏ" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tocdomaydun">Tốc độ máy đùn (±50)</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="tocdomaydun" asp-for="tocdomaydun" placeholder="Tốc độ máy đùn (±50)" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="tocdokeo">Tốc độ Kéo (±50)</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="tocdokeo" asp-for="tocdokeo" placeholder="Tốc độ Kéo (±50)" />
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-4 col-form-label" for="CategoryId">Danh Mục</label>
								<div class="col-sm-8">
									<select class="form-control" id="CategoryId" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
										<option value="">Chọn danh mục</option>
									</select>
								</div>
							</div>
						</div>
					</div>

					<!-- Nút submit -->
					<div class="row justify-content-end">
						<div class="col-sm-12">
							<button type="submit" class="btn btn-primary">Lưu</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
